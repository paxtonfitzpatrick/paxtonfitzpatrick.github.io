{
    "liquid.engine": "jekyll",
    "runOnSave.commands": [
        {
            "globMatch": "assets/js/*.{js,json}",
            "command": "npx terser ${fileRelative} -o ${fileDirnameRelative}/${fileBasenameNoExtension}.min${fileExtname} -c -m --ecma=2019 --source-map \"filename=${fileBasenameNoExtension}.min${fileExtname}.map,url=${fileBasenameNoExtension}.min${fileExtname}.map\"",
            "async": true,
            "runningStatusMessage": "Minifying ${fileRelative}...",
            "successStatusMessage": "Minified ${fileRelative}",
            "statusMessageTimeout": 3000,
            "workingDirectoryAsCWD": true,
            "runIn": "backend"
        }
    ]
}